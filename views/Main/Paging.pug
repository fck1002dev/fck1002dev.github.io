s_paging
  ul#paging(class='flex justify-center items-center mt-12 lg:mt-20')
    li.prev
      a.link([##_prev_page_##] class='[##_no_more_prev_##]')
        span.txt 이전
        i.ico(class='fa fa-angle-left')
    s_paging_rep
      li.num
        a.link([##_paging_rep_link_##]) [##_paging_rep_link_num_##]
    li.next
      a.link([##_next_page_##] class='[##_no_more_next_##]')
        i.ico(class='fa fa-angle-right')
        span.txt 다음

style
  :postcss
    #paging {
      .prev,
      .next {
        .txt {
          @apply text-hidden;
        }
      }

      a {
        @apply inline-block;
      }

      span {
        @apply text-sm;
      }

      i,
      span {
        @apply w-8 h-8 leading-8 text-center mx-1 text-base text-h-800 dark:text-h-300;
      }

      span:not(.selected) {
        @apply hidden lg:inline-block;
      }

      .selected {
        @apply rounded-full bg-h-600 inline-block text-h-200;
      }
    }
